<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionButton_Panel">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActionButton_Record">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ActionButton_Record_ToGesture" parent="ActionButton_Record">
        <item name="android:src">@drawable/ic_to_gesture_l</item>
    </style>

    <style name="ActionButton_Record_ToSound" parent="ActionButton_Record">
        <item name="android:src">@drawable/ic_to_sound_l</item>
    </style>

    <style name="ActionButton_Record_Options" parent="ActionButton_Record">
        <item name="android:src">@drawable/ic_options_l</item>
    </style>
</resources>