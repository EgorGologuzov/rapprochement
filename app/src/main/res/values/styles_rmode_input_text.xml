<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RModeInputText_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RModeInputText_Counter" parent="Theme.Rapprochement.TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="RModeInputText_EditText" parent="Theme.Rapprochement.BgRect">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/prompt_input_text</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>