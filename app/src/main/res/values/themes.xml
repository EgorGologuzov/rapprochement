<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Rapprochement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_2</item>
        <item name="colorPrimaryVariant">@color/primary_1</item>
        <item name="colorOnPrimary">@color/bg_l</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_3</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/bg_d</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Rapprochement.FontNormal" parent="Theme.Rapprochement">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Rapprochement.FontBig" parent="Theme.Rapprochement">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Rapprochement.FontVeryBig" parent="Theme.Rapprochement">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Rapprochement.Bg">
        <item name="android:background">@color/bg_l</item>
    </style>

    <style name="Theme.Rapprochement.Text">
        <item name="android:textColor">@color/text_l</item>
    </style>

    <style name="Theme.Rapprochement.BgHands">
        <item name="android:src">@drawable/bg_l</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Theme.Rapprochement.BgRect">
        <item name="android:background">@drawable/record_bg_l</item>
    </style>

    <style name="Theme.Rapprochement.TextNormal" parent="Theme.Rapprochement.Text">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Theme.Rapprochement.TextTitle" parent="Theme.Rapprochement.TextNormal">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

</resources>