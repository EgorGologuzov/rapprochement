<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RecordSettingsGroup_FirstLayout" parent="Theme.Rapprochement.BgRect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecordSettingsGroup_ParametersLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RecordSettingsGroup_Name" parent="Theme.Rapprochement.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="RecordSettingsGroup_Value" parent="Theme.Rapprochement.TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="RecordSettingsGroup_GroupTitle" parent="Theme.Rapprochement.TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>