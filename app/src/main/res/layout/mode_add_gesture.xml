<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nti.rapprochement.views.RoundPreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/camera_placeholder"
            android:adjustViewBounds="true"/>
        <com.nti.rapprochement.views.RoundPreview
            android:id="@+id/skeletonPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <ProgressBar
            android:id="@+id/cameraLoadingSpinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/primary_1"/>
        <TextView
            android:id="@+id/countdownView"
            style="@style/Theme.Rapprochement.TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="64sp"
            android:visibility="invisible"
            android:text="1" />
        <FrameLayout
            android:id="@+id/flashLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/flash"
            android:visibility="invisible"/>
    </FrameLayout>
    <TextView
        android:id="@+id/frameCounterView"
        style="@style/Theme.Rapprochement.TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Сделано снимков: 0 / 20" />
    <LinearLayout
        style="@style/Theme.Rapprochement.BgRect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/Theme.Rapprochement.TextNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/message_add_gesture_instruction"/>
    </LinearLayout>
</LinearLayout>
