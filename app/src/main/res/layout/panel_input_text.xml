<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nti.rapprochement.views.ActionButton
        android:id="@+id/backButton"
        style="@style/ActionButton_Panel"
        android:layout_marginStart="0dp"
        android:src="@drawable/btn_back" />

    <com.nti.rapprochement.views.ActionButton
        android:id="@+id/toTextButton"
        style="@style/ActionButton_Panel"
        android:src="@drawable/btn_to_text" />

    <com.nti.rapprochement.views.ActionButton
        android:id="@+id/toSoundButton"
        style="@style/ActionButton_Panel"
        android:src="@drawable/btn_to_sound" />

    <com.nti.rapprochement.views.ActionButton
        android:id="@+id/toGestureButton"
        style="@style/ActionButton_Panel"
        android:src="@drawable/btn_to_gesture" />

</LinearLayout>